doctype html 
head 
  title Game Tournament 
  // core theme CSS
  style 
    include ./css/bootstrap.min.css 
  style 
    include ./css/styles.css 

  script(src='https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js')
  script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js')
#wrapper.d-flex
  #sidebar-wrapper.border-end.bg-white
    button#sidebarToggle.btn.btn-primary MENU
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
    .list-group.list-group-flush
      for game in games
        a.list-group-item.list-group-item-action.list-group-item-light.p-3(href='#!') #{game.name}
  // Page content wrapper
  #page-content-wrapper
    // Top navigation 
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      .container-fluid
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          form.form-inline.my-2.my-lg-0
            input.form-control.mr-sm-2(type='search' placeholder='Search' aria-label='Search')
            button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
          ul.navbar-nav.mr-auto.mt-2.mt-lg-0
            li.nav-item.active
              a.nav-link(href='#Home') Home 
              span.sr-only (current)
            li.nav-item.dropdown
              a#navbarDropdown.nav-link.dropdown-toggle(href='#Profile' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false') Profile
              .dropdown-menu(aria-labelledby='navbarDropdown')
                a.dropdown-item(href='#') Settings
                a.dropdown-item(href='#') Logout
                
           
    block content 