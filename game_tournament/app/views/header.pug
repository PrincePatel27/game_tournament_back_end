doctype html 
head 
  title Game Tournament 
  // core theme CSS
  style 
    include ./css/styles.css
    include ./css/bootstrap.min.css 
  script(src='https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js')
  script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js')
.container-fluid 
  #wrapper.d-flex
    #sidebar-wrapper.border-end.bg-white
      button#sidebarToggle.btn.btn-primary MENU
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        for game in games 
          ul.navbar-nav.mr-auto.mt-2
            li.nav-item
              a.nav-link(href='/') #{game.name} 

      .list-group.list-group-flush
    .container-fluid   
      // Page content wrapper
      #page-content-wrapper
        // Top navigation 
        nav.navbar.navbar-expand-sm.bg-white
          ul.navbar-nav.ml-auto
              li.nav-item
                a.nav-link(href='/') Home
              li.nav-item.dropdown
                a#navbarDropdown.nav-link.dropdown-toggle(href='#Profile' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false') Username
                  .dropdown-menu(aria-labelledby='navbarDropdown')
                    a.dropdown-item(href="Profile") Profile
                    a.dropdown-item(href='Login') Logout       
      block content 